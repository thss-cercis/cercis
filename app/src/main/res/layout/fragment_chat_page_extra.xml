<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_action_extra_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="?attr/colorSurfaceDark"
    tools:layout_height="150dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chat_action_extra_share_location"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorSurface"
        android:elevation="2dp"
        android:text="@string/chat_action_extra_share_location"
        app:icon="@drawable/ic_location_40"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
