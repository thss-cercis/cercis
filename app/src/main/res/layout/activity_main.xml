<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="cn.edu.tsinghua.thss.cercis.viewmodel.MainActivityViewModel" />
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="MainActivityViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/startup_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/login_page_background"
        android:fitsSystemWindows="true"
        android:windowSoftInputMode="adjustResize"
        tools:context=".MainActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/master_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/partial_main" android:id="@+id/reused_view" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.fragment.app.FragmentContainerView
            android:visibility="@{viewModel.detailVisible}"
            android:id="@+id/detail_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true" />

    </FrameLayout>
</layout>
