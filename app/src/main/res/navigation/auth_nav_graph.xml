<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/startup_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="cn.edu.tsinghua.thss.cercis.ui.startup.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signup_nav_graph"
            app:destination="@id/signup_nav_graph" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="cn.edu.tsinghua.thss.cercis.ui.startup.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signup_nav_graph"
            app:destination="@id/signup_nav_graph" />
    </fragment>
    <include app:graph="@navigation/signup_nav_graph" />
    <action android:id="@+id/action_global_loginFragment" app:destination="@id/loginFragment" />
</navigation>