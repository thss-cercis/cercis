<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startup_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="cn.edu.tsinghua.thss.cercis.ui.startup.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_signUpFragment1"
            app:destination="@id/signUpFragment1" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="cn.edu.tsinghua.thss.cercis.ui.startup.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment1"
            app:destination="@id/signUpFragment1" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment1"
        android:name="cn.edu.tsinghua.thss.cercis.ui.startup.SignUpFragment1"
        android:label="layout_signup_1"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signUpFragment1_to_signUpSuccessFragment"
            app:destination="@id/signUpSuccessFragment"
            app:popUpTo="@id/signUpFragment1"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpSuccessFragment"
        android:name="cn.edu.tsinghua.thss.cercis.ui.startup.SignUpSuccessFragment"
        android:label="layout_signup_success"
        tools:layout="@layout/fragment_signup_success" >
        <argument
            android:name="userId"
            app:argType="long" />
    </fragment>
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/splashFragment"/>
</navigation>