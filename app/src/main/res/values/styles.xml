<resources>
    <!-- Base application theme. -->
    <style name="Theme.Cercis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cercis_main</item>
        <item name="colorPrimaryDark">@color/cercis_main_dark</item>
        <item name="colorAccent">@color/cercis_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.Cercis">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="roundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Username" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Preview" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Time" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Unread" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cercis.ListItem.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/list_background</item>
    </style>

    <style name="TextAppearance.Cercis.ListItem.Delimiter" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/list_delimiter_text</item>
        <item name="android:background">@color/list_delimiter</item>
    </style>

    <style name="Widget.Cercis.Button.TextButton.Dense" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.Cercis.ListItem.ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="cornerSize">50%</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

</resources>