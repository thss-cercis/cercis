<resources>
    <!-- Base application theme. -->
    <style name="Theme.Cercis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cercis_main</item>
        <item name="colorPrimaryDark">@color/cercis_main_dark</item>
        <item name="colorAccent">@color/cercis_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.Cercis">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="roundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    
    <style name="TextAppearance.Cercis.Messages.Username" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Preview" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Time" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Unread" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

</resources>