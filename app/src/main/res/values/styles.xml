<resources>
    <attr name="fragmentBackground" format="color" />
    <attr name="colorSurfaceDark" format="color" />
    <attr name="colorDivider" format="color" />
    <attr name="colorIncomingBubble" format="color" />
    <attr name="colorOutgoingBubble" format="color" />
    <attr name="colorOnIncomingBubble" format="color" />
    <attr name="colorOnOutgoingBubble" format="color" />

    <!-- Base application theme. -->
    <style name="Theme.Cercis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/cercis_main_dark</item>
        <item name="colorPrimary">@color/cercis_main</item>
        <item name="colorPrimaryDark">@color/cercis_main_dark</item>
        <item name="colorPrimaryVariant">@color/cercis_main_dark</item>
        <item name="colorOnPrimary">@color/cercis_on_main</item>
        <item name="colorAccent">@color/cercis_accent</item>
        <item name="colorSecondary">@color/cercis_accent</item>
        <item name="colorSecondaryVariant">@color/cercis_accent_dark</item>
        <item name="colorOnSecondary">@color/cercis_on_accent</item>
        <item name="colorSurface">@color/surface_day</item>
        <item name="colorOnSurface">@color/on_surface_day</item>
        <item name="colorSurfaceDark">@color/surface_day_dark</item>
        <item name="colorDivider">@color/divider</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorIncomingBubble">@color/in_bubble</item>
        <item name="colorOutgoingBubble">@color/out_bubble</item>
        <item name="colorOnIncomingBubble">@color/on_in_bubble</item>
        <item name="colorOnOutgoingBubble">@color/on_out_bubble</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="fragmentBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.Cercis.DayNight" parent="Theme.Cercis" />

    <style name="FullscreenTheme" parent="Theme.Cercis">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="roundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCorner20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Username" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Preview" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Time" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cercis.Messages.Unread" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cercis.ListItem.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Cercis.ChatItem.Username" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.MessageBox.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/textfield_background</item>
    </style>

    <style name="TextAppearance.Cercis.Message.Text" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cercis.ListItem.Delimiter" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/list_delimiter_text</item>
        <item name="android:background">@color/list_delimiter</item>
    </style>

    <style name="Widget.Cercis.Button.TextButton.Dense" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.Cercis.Button.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="Widget.Cercis.Button.TextButton.Accent" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/AccentButtonOverlay</item>
    </style>

    <style name="Widget.Cercis.Button.Outlined.Accent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/AccentButtonOverlay</item>
    </style>

    <style name="Widget.Cercis.Button.Accent" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/AccentButtonOverlay</item>
    </style>

    <style name="AccentButtonOverlay">
        <item name="colorPrimary">?attr/colorAccent</item>
    </style>

    <style name="Widget.Cercis.TextView.Withdraw" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/unread_bubble</item>
        <item name="backgroundTint">?attr/colorSurfaceDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.Cercis.Bubble" parent="Widget.MaterialComponents.CardView">
        <item name="android:gravity">center_vertical</item>
        <item name="lineHeight">21sp</item>
    </style>

    <style name="Widget.Cercis.Bubble.Incoming" parent="Widget.Cercis.Bubble">
        <item name="android:background">@drawable/shape_incoming_bubble</item>
        <item name="android:textColor">?attr/colorOnIncomingBubble</item>
    </style>

    <style name="Widget.Cercis.Bubble.Outgoing" parent="Widget.Cercis.Bubble">
        <item name="android:background">@drawable/shape_outgoing_bubble</item>
        <item name="android:textColor">?attr/colorOnOutgoingBubble</item>
    </style>

    <style name="Widget.Cercis.Bubble.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="TextAppearance.Cercis.Bubble" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.Cercis.Bubble.TextView.Incoming" parent="Widget.Cercis.Bubble.TextView">
        <item name="android:textColor">?attr/colorOnIncomingBubble</item>
    </style>

    <style name="Widget.Cercis.Bubble.TextView.Outgoing" parent="Widget.Cercis.Bubble.TextView">
        <item name="android:textColor">?attr/colorOnOutgoingBubble</item>
    </style>

    <style name="Widget.Cercis.ListItem.ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="cornerSize">50%</item>
        <item name="cornerRadius">20dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>
</resources>